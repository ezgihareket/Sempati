<section style="background-color:#FFC061"
    class="page-header page-header-center  page-header-primary page-header-color page-header-more-padding page-header-no-title-border">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 style="font-size:40px;color:#FFF829">
                    STOK GUNCELLE
                </h1>
            </div>
        </div>
    </div>
</section>

<div class="container" id="girisyap">

    <div class="row">
        <div class="col-md-12">
            <div id="ctl00_cph1_PanelOrta">

                <!-- OrtaAlan2 Başlangıç -->
                <div id="ctl00_cph1_ctl00_panel_orta">

                    <!-- ##Blok -->

                    <div class="Blok" id="Uyelik_uyeol">
                        <div class="Area">

                            <div class="col-md-12">
                                <div class="col-md-2"></div>
                                <div class="col-md-8">
                                </div>
                            </div>
                            <div id="ctl00_cph1_ctl00_ctl00_Panel4">
                                <div class="col-md-2"></div>
                                <div class="col-md-8 ">
                                    <form method="post" action="/stok/kaydet" class="FormAlani">
                                    <input hidden name="stok_id" value="@Model.stok_id" />
                                        <div class="col-md-12  margin-bottom">
                                            <div class="col-md-12 margin-bottom">
                                                Adet:
                                                <div class="clearfix5"></div>
                                                <b>
                                                    <textarea required name="adet" class="form-control">@Model.adet</textarea>
                                                </b>
                                            </div>
                                            <div class="col-md-12 margin-bottom">
                                                Yiyecek:
                                                <div class="clearfix5"></div>
                                                <b>
                                                    <textarea required name="yiyecek" class="form-control">@Model.yiyecek</textarea>
                                                </b>
                                            </div>
                                            <div class="col-md-12 margin-bottom">
                                                Yiyecek ID:
                                                <div class="clearfix5"></div>
                                                <b>
                                                    <select name="yiyecek_id" value="@Model.yiyecek_id" class="form-control">
                                                        @foreach (var item in ViewBag.HayvanYiyecekTipleri)
                                                        {
                                                            <option value="@item.yiyecek_id">@item.aciklama, @item.yiyecek_id</option>
                                                        }
                                                    </select>
                                                </b>
                                            </div>
                                            <div class="col-md-12 margin-bottom">
                                                    <a href="/stok/sil?id=@Model.stok_id" class="btn btn-danger">Sil</a>
                                                <input type="submit" value="Oluştur" class="btn btn-success">
                                            </div>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                        <!-- Blok Alan -->
                    </div>
                    <!-- Blok Gölge -->
                    <div class="Golge">
                        &nbsp;
                    </div>
                    <!-- Blok Gölge -->
                </div>
                <!-- OrtaAlan2 Son -->
            </div>
        </div>
    </div>
</div>

